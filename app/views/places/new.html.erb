<div class="container">
<% @user = User.find_by({ "id" => session["user_id"] }) %>
<% if @user != nil %>
<h2 class="display-5">Add A New Place</h2>
<form action="/places" method="post">
  <div class="mb-3">
    <label for="name_input">Name</label>
    <input type="text" name="name" id="name_input">
  </div>

  <button class="btn btn-outline-success">Save</button>
    <a href="/places" class="btn btn-outline-danger">Cancel</a>
</form>
<% else %>
  You must first <a href="/login">login</a> to add a new place.
<% end %>
</div>